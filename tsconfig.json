{
  "include": [
    "node-service/**/*",
    "chatalog-cli/**/*",
    "chatalog/**/*",
    "report-page/**/*"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "ES6"
    ],
    "esModuleInterop": true,
    "paths": {
      "@chatalog/*": [
        "./chatalog/*"
      ],
    }
  }
}